<!-- Page Content -->
<div class="container">
  <br>

  <div class="row">
    <div class="col-lg-12">
      <center><h1 class="page-header">XKCD FORUM</h1></center>
    </div>
  </div>

  <div class="row">
  {{ log model }}
  {{#each model as |comic|}}
    {{ log comic }}
    <div class="col-md-4">
      <div class="comic-template">
        <img class=" comic-image" src="{{comic.img}}" alt="">
        <h3>{{#link-to "comic" comic.num}}{{comic.title}}{{/link-to}}</h3>
      </div>
    </div>
  {{else}}
    <div class="col-lg-12">
      <center><h3>NO POSTS TO SHOW :(</h3></center>
    </div>
  {{/each}}
  </div>

  {{footer-comp}}
</div>
<!-- /.container -->
{{outlet}}
